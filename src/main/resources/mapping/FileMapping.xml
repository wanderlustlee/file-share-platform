<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ncu.xzx.mapper.FileMapper">   <!-- 命名空间，名字可以随意起，只要不冲突即可 -->
    <select id="getByUserId" resultType="com.ncu.xzx.model.FileVo">
        SELECT * from file where userId = #{userId}
    </select>

    <insert id="addFile" useGeneratedKeys="true" keyProperty="id" parameterType="com.ncu.xzx.model.FileVo">
        insert into file (userId, fileName, filePath, createTime) values (#{userId}, #{fileName}, #{filePath}, #{createTime})
    </insert>

</mapper>